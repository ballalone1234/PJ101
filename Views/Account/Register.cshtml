@model Project1.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<head>
    <link rel="stylesheet" href="~/css/StyleSheet1.css" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@700&family=Poppins&display=swap" rel="stylesheet">
    <style>
        .input-icons i {
            position: absolute;
        }

        .input-icons {
            width: 100%;
            margin-bottom: 10px;
        }

        .icon {
            padding: 10px;
            min-width: 40px;
        }

        .input-field {
            width: 100%;
            padding: 10px;
            text-align: center;
        }

        .baloo_bold {
            font-family: 'Baloo 2', cursive;
        }

        * {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>
<body style="background-color: #FFF9DB">
    <center>

        <h2 class="baloo_bold">@ViewBag.Title</h2>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 class="baloo_bold">Create a new 👑 admin account</h4>
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <!-- start icon -->
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "background-color:#454545; border-radius: 25px;  color: white;", @placeholder = "Email" })
            </div>

            <div class="form-group">
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @style = "background-color:#454545; border-radius: 25px;  color: white;", @placeholder = "Name" })
            </div>

            <div class="form-group">
                @Html.TextBoxFor(m => m.Faculty, new { @class = "form-control", @style = "background-color:#454545; border-radius: 25px;  color: white;", @placeholder = "Faculty" })

            </div>

            <div class="form-group">
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @style = "background-color:#454545; border-radius: 25px;  color: white;", @placeholder = "Phone number" })

            </div>

            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "background-color:#454545; border-radius: 25px;  color: white;", @placeholder = "Password" })
            </div>

            <div class="form-group">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @style = "background-color:#454545; border-radius: 25px;  color: white;", @placeholder = "Confirm Password" })
            </div>

            <div class="form-group">
                <div class="baloo_bold">
                    <input type="submit" class="btn btn-default" value="Register" style="color: white; background-color: #454545; padding:10px; font-size:18px; font-weight:bold; border-radius:15px;" />
                </div>
            </div>
        }
    </center>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
