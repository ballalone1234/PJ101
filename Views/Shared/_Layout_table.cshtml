        <a href="#">&emsp;<img src="~/Content/images/Report.png" width="17" />&emsp;Report</a>
        <a href="#">&emsp;<img src="~/Content/images/Tag.png" width="17" />&emsp;Tag</a>
        <a href="#">&emsp;<img src="~/Content/images/Dashboard.png" width="17" />&emsp;Empty</a>
        <a href="#">&emsp;<img src="~/Content/images/Dashboard.png" width="17" />&emsp;Empty</a>
    </div>

</div>
<body style="background-color:#FFF9DB;">
    <div class="container body-content" style="width:100%">
        @RenderBody()
        <div class="DashB"></div>
        <hr />
      
    </div>
</body>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)


</html>
